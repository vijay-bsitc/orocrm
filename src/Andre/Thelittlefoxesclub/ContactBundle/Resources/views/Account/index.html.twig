{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set gridName = 'accounts-grid' %}
{% set pageTitle = 'oro.account.entity_plural_label'|trans %}

{% block navButtons %}
    {% include 'OroImportExportBundle:ImportExport:buttons.html.twig' with {
        entity_class: entity_class,
        exportProcessor: 'oro_account',
        exportTemplateProcessor: 'oro_account',
        importProcessor: 'oro_account.add_or_replace',
        importTitle: 'oro.importexport.import.entity'|trans({'%entityName%': 'oro.account.entity_plural_label'|trans}),
        datagridName: gridName
    } %}

    {% if is_granted('oro_account_create') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path' : path('oro_account_create'),
                'entity_label': 'oro.account.entity_label'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}
